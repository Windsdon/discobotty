doctype html
html
	head
		include ./includes/header.jade

		title Discord Bot :: Authenticate
body
	.container
		.row
			.col-md-4.col-md-offset-4
				.login-panel.panel.panel-info
					.panel-heading
						h3.panel-title Authenticate
					.panel-body
						#loginCommand
							p Please send the bot a message with:
							pre.text-center= command
							p to log in.
							p
								a(href="/logout") Get a new one
							.progress
								.progress-bar.progress-bar-striped.progress-bar-info.active(
									role="progressbar", 
									aria-valuenow="1", 
									aria-valuemin="0", 
									aria-valuemax="1", 
									style="width:100%"
								)
						#loginSuccess(style="display:none")
							p.text-center.lead
								a(href="/")
									img#userAvatar(src="/noUser.png", style="background-color: #CCC; border-radius: 64px", width= "128px", height= "128px")
									br
									span#username Unknown
		.row
			p.text-center.text-muted
				|WebAPI by Windsdon - Theme: 
				a(href="http://startbootstrap.com/template-overviews/sb-admin-2/", target="_blank") SB Admin 2

	include ./includes/footer_scripts.jade
	script(src="/mod/js/login.js")
